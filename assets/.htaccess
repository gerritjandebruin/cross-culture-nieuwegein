# Aggressive caching for static assets in the assets folder
<IfModule mod_expires.c>
    ExpiresActive on
    
    # Images - Cache for 1 year (they don't change often)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Documents - Cache for 6 months
    ExpiresByType application/pdf "access plus 6 months"
    
    # CSS - Cache for 1 month
    ExpiresByType text/css "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
    # Set cache control headers
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|pdf|css)$">
        Header set Cache-Control "public, max-age=31536000"
        Header unset ETag
    </FilesMatch>
    
    # Add CORS headers for fonts if any are added later
    <FilesMatch "\.(woff|woff2|ttf|otf)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Remove ETags for static assets (not needed with strong cache control)
<IfModule mod_headers.c>
    <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf|woff|woff2)$">
        FileETag None
    </FilesMatch>
</IfModule>